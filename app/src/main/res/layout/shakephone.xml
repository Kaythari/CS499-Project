<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shake"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/demonshake">

    <ProgressBar
        android:id="@+id/CircleBar"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_centerInParent="true"
        android:indeterminate="false"
        android:progress="0"
        android:rotation="-90"
        android:max="100"
        android:progressDrawable="@drawable/green_circle"
        android:background="@drawable/glass_circle"
        style="?android:attr/progressBarStyleHorizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:id="@+id/counter"
        android:textColor="@color/colorBlack"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <com.example.kaythari.myfirstapp.Typewriter
        android:id="@+id/typewriter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="30sp"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:layout_marginBottom="14dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>